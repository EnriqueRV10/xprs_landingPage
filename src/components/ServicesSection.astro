---
import Service from "./Service";
import ImageWeb from "/src/assets/services/desarrollo-xl.jpg";
import ImageApp from "/src/assets/services/iphone-xl.jpg";
import ImageLaptop from "/src/assets/services/computer-xl.jpg";
---

<section class="my-10 pt-15" id="services">
  <h2 class="font-bold text-white text-4xl text-center mb-8">Servicios</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 p-4">
    <div class="md:border-r border-amber-700">
      <Service
        client:visible
        title="Landing Page"
        src={ImageWeb}
        text="Sitio estatico a la medida que captura la atencion de los consumidores"
      />
    </div>

    <div class="md:border-r border-amber-700">
      <Service
        client:visible
        title="SEO"
        src={ImageLaptop}
        text="Ayudar a los buscadores a entender tu contenido y a los usuarios a encontrar tu sitio y tomar una decisión sobre si deben visitarlo a través de un buscador"
      />
    </div>

    <div class="md:border-r-0">
      <Service
        client:visible
        title="Apps Multiplataforma"
        src={ImageApp}
        text="Programas que pueden ejecutarse en distintos dispositivos y sistemas operativos"
      />
    </div>
  </div>
</section>

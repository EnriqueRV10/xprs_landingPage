---
import logo from "./../assets/logos/xprsWhite.svg";

const navLinks = [
  { name: "Inicio", href: "#hero" },
  { name: "Servicios", href: "#services" },
  { name: "Nosotros", href: "#about" },
  { name: "Tecnologías", href: "#tech" },
  { name: "Proyectos", href: "#projects" },
  { name: "Contacto", href: "#contacto" },
];
---

<header class="sticky top-0 z-20">
  <nav class="px-4 py-3 bg-backgroud/90 text-contrast justify-center">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div>
        <a href="#hero">
          <img src={logo.src} alt="Logo XPRS" class="h-8" loading="eager" />
        </a>
      </div>

      <button
        id="menu-btn"
        class="md:hidden text-contrast focus:outline-none cursor-pointer hover:text-main transition-colors duration-300"
      >
        <!-- Menú abierto -->
        <svg
          id="menu-icon"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <!-- Menú cerrado -->
        <svg
          id="close-icon"
          class="w-6 h-6 hidden"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18 17.94 6M18 18 6.06 6"></path>
        </svg>
      </button>

      <ul
        id="menu"
        class="hidden md:flex flex-row-reverse gap-5 text-contrast font-medium"
      >
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="hover:text-main transition-colors duration-500"
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <ul id="mobile-menu" class="md:hidden hidden mt-3 gap-5">
      {
        navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="block py-2 px-3 rounded hover:bg-main justify-items-center transition-colors duration-100"
            >
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>

  <script type="module" is:inline>
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");

    btn?.addEventListener("click", () => {
      menu.classList.toggle("hidden");

      // Alternar icono
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  </script>
</header>

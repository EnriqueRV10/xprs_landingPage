<form id="contactForm" class="w-full max-w-md space-y-4 bg-white rounded-lg p-10">
  <div>
    <label for="nombre" class="block text-sm font-medium text-gray-700 mb-1"
      >Nombre</label
    >
    <input
      type="text"
      id="nombre"
      name="nombre"
      required
      class="w-full px-3 py-2 text-black border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
    />
  </div>

  <div>
    <label for="correo" class="block text-sm font-medium text-gray-700 mb-1"
      >Correo electr√≥nico</label
    >
    <input
      type="email"
      id="correo"
      name="correo"
      required
      class="w-full px-3 py-2 text-black border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
    />
  </div>

  <div>
    <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-1"
      >Mensaje</label
    >
    <textarea
      id="mensaje"
      name="mensaje"
      rows="4"
      required
      class="w-full px-3 py-2 text-black border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
    ></textarea>
  </div>

  <div class="pt-2">
    <button
      type="submit"
      class="w-full bg-primary hover:bg-focus text-white font-medium py-2 px-4 rounded-md transition duration-300 focus:outline-none focus:ring-2 focus:ring-lightPrimary focus:ring-opacity-50"
    >
      Enviar mensaje
    </button>
  </div>
</form>
